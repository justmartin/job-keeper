<div class="container devise-form form-container">
  <div class="card">
    <% if notice %>
      <p id="notice" class="alert alert-info"><%= notice %></p>
    <% end %>

    <p class="field card-block form-group">
      <strong>Name:</strong>
      <%= @contact.name %>
    </p>

    <p class="field card-block form-group">
      <strong>Company:</strong>
      <%= @contact.company %>
    </p>

    <p class="field card-block form-group">
      <strong>Position:</strong>
      <%= @contact.position %>
    </p>

    <p class="field card-block form-group">
      <strong>Phone:</strong>
      <%= @contact.phone %>
    </p>

    <p class="field card-block form-group">
      <strong>Email:</strong>
      <%= @contact.email %>
    </p>

    <div class="card-footer">
      <% if @contact.user == current_user %>
        <%= link_to 'Edit', edit_contact_path(@contact) %> |
        <%= link_to 'Back', contacts_path %>
      <% end %>
    </div>
  </div>
</div>

<%= render "layouts/footer" %>